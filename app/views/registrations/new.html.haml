%h2 Sign up

= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.inputs :name => "Basic" do
    = f.input :username
    = f.input :password, :as => :password
    = f.input :password_confirmation, :as => :password
    = f.input :'role_ids][', :as => :hidden, :input_html => {:value => Role.find_or_create_by_name("Hotel Owner").id}

  = f.inputs :name => "Personal Info" do
    = f.input :email, :as => :email
    = f.input :first_name
    = f.input :last_name
    = f.input :phone_number
    = f.input :dob, :as => :date_select, :start_year => 100.year.ago.year, :end_year => Time.now.year, :include_blank => false

  = f.inputs :name => "Contact" do
    = f.input :address1
    = f.input :address2
    = f.input :city
    = f.input :state
    = f.input :country
    = f.input :zip_code

  = f.actions do
    = f.action(:submit, :label => "Sign up")
