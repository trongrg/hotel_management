%h1 Listing Room types

%table#room_types
  %thead
    %tr
      %th Name
      %th Price
      %th Currency
      %th Description
      %th Image
      %th
      %th
      %th

  %tbody
    - @room_types.each do |room_type|
      %tr{ :id => "room_type_#{room_type.id}" }
        %td= room_type.name
        %td= room_type.price
        %td= room_type.currency
        %td= room_type.description
        %td= room_type.image
        %td= link_to 'Show', hotel_room_type_path(@hotel, room_type)
        %td= link_to 'Edit', edit_hotel_room_type_path(@hotel, room_type)
        %td= link_to 'Delete', hotel_room_type_path(@hotel, room_type), :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Room Type', new_hotel_room_type_path(@hotel)

= paginate @room_types
