%html
  %head
    %title Hotel Management
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = yield :head
  %body
    #flash
      - flash.each do |type, message|
        %div{ :id => type }
          = message
    #header
      = render 'layouts/application/header'
    #main
      .container
        = yield
    #footer
      .container
        = render 'layouts/application/footer'
