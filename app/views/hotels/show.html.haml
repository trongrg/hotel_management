%h2= "Hotel #{@hotel.name}"
%p
  %b Name:
  = @hotel.name
%p
  %b Address 1:
  = @hotel.address.address_1
%p
  %b Address2:
  = @hotel.address.address_2
%p
  %b City:
  = @hotel.address.city
%p
  %b State:
  = @hotel.address.state
%p
  %b Country:
  = @hotel.address.country
%p
  %b Zip code:
  = @hotel.address.zip_code
%p
  %b Phone number:
  = @hotel.phone_number
%p
  %b Lat:
  = @hotel.lat
%p
  %b Lng:
  = @hotel.lng

= link_to 'Edit', edit_hotel_path(@hotel)
\|
= link_to 'Delete', hotel_path(@hotel), :data => { :confirm => "Are you sure?" }, :method => :delete
\|
= link_to 'Back', hotels_path
